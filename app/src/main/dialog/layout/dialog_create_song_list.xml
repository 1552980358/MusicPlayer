<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/createSongDialog_list_paddings"
    android:paddingStart="@dimen/createSongDialog_list_paddings"
    android:paddingEnd="@dimen/createSongDialog_list_paddings">
    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextTitle"
        android:inputType="text"
        android:maxLines="1"
        android:maxLength="20"
        android:hint="@string/createSongListDialog_editText_hint"
        tools:ignore="Autofill" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/createSongDialog_relativeLayout_marginTop">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCount"
            android:text="0"
            android:layout_toStartOf="@id/textViewLimit"
            tools:ignore="HardcodedText" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLimit"
            android:text="/20"
            tools:ignore="HardcodedText"
            android:layout_alignParentEnd="true" />
    
    </RelativeLayout>

</LinearLayout>