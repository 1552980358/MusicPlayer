<?xml version="1.0" encoding="utf-8"?>
<!--suppress DeprecatedClassUsageInspection -->
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:iconSpaceReserved="false" >

    <PreferenceCategory
        android:title="@string/abc_settings_arrangement_title"
        app:iconSpaceReserved="false" >
        <ListPreference
            app:iconSpaceReserved="false"
            android:key="settingPreference_arrangement"
            android:entries="@array/array_arrangement"
            android:title="@string/abc_settings_arrangement_title"
            android:dialogTitle="@string/abc_settings_arrangement_dialogtitle"
            android:entryValues="@array/array_arrangement_value"
            android:defaultValue="TITLE"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/abc_settings_player_title"
        app:iconSpaceReserved="false" >

        <SwitchPreference
            android:key="settingPreference_bgAlbum"
            app:iconSpaceReserved="false"
            android:title="@string/abc_settings_player_bgAlbum_title"
            android:summary="@string/abc_settings_player_bgAlbum_subtitle" />

        <SwitchPreference
            app:iconSpaceReserved="false"
            android:key="settingPreference_buttons"
            android:title="@string/abc_settings_player_buttons_title"
            android:summary="@string/abc_settings_player_buttons_subtitle" />

        <SwitchPreference
            app:iconSpaceReserved="false"
            android:key="settingPreference_filter"
            android:title="@string/abc_settings_player_filter_title"
            android:summary="@string/abc_settings_player_filter_subtitle" />

        <SwitchPreference
            app:iconSpaceReserved="false"
            android:key="settingPreference_statusBar"
            android:title="@string/abc_settings_player_statusBar_title"
            android:summary="@string/abc_settings_player_statusBar_subtitle" />

    </PreferenceCategory >

    <PreferenceCategory
        android:title="@string/abc_settings_headset_title"
        app:iconSpaceReserved="false" >

        <SwitchPreference
            app:iconSpaceReserved="false"
            android:key="settingPreference_wired_plugin"
            android:title="@string/abc_settings_headset_wired_plugin_title"
            android:summary="@string/abc_settings_headset_wired_plugin_subtitle" />

        <SwitchPreference
            app:iconSpaceReserved="false"
            android:key="settingPreference_wired_pullout"
            android:title="@string/abc_settings_headset_wired_pullout_title"
            android:summary="@string/abc_settings_headset_wired_pullout_subtitle" />

        <SwitchPreference
            app:iconSpaceReserved="false"
            android:key="settingPreference_wireless_connected"
            android:title="@string/abc_settings_headset_wireless_connected_title"
            android:summary="@string/abc_settings_headset_wireless_connected_subtitle"
            android:selectable="false"/>

        <SwitchPreference
            app:iconSpaceReserved="false"
            android:key="settingPreference_wireless_disconnected"
            android:title="@string/abc_settings_headset_wireless_disconnected_title"
            android:summary="@string/abc_settings_headset_wireless_disconnected_subtitle" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/abc_settings_knownIssues_title"
        app:iconSpaceReserved="false" >
        <Preference
            app:iconSpaceReserved="false"
            android:title="@string/abc_settings_knownIssues_tag1_title"
            android:summary="@string/abc_settings_knownIssues_tag1_subtitle" />
    </PreferenceCategory >

</PreferenceScreen >