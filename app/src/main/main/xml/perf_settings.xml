<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/abc_settings_reloadFiles_title" >

        <Preference
            android:title="@string/abc_settings_reloadFiles_tag1_title"
            android:summary="@string/abc_settings_reloadFiles_tag1_subtitle"
            android:key="settingPreference_searchMusic" />

        <ListPreference
            android:key="settingPreference_searchMusicThread"
            android:dialogTitle="@string/abc_settings_reloadFiles_tag2_dialog"
            android:title="@string/abc_settings_reloadFiles_tag2_title"
            android:summary="@string/abc_settings_reloadFiles_tag2_subtitle"
            android:defaultValue="SINGLE"
            android:entries="@array/settingPreference_searchMusicThread_entries"
            android:entryValues="@array/settingPreference_searchMusicThread_entriesValue" />
    </PreferenceCategory >

    <PreferenceCategory android:title="@string/abc_settings_knownIssues_title" >
        <Preference
            android:title="@string/abc_settings_knownIssues_tag1_title"
            android:summary="@string/abc_settings_knownIssues_tag1_subtitle"/>
    </PreferenceCategory >

</PreferenceScreen >