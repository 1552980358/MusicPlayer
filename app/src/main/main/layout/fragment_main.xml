<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        app:elevation="0dp"
        android:layout_margin="@dimen/dp_5" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_20"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:selectableItemBackground" >
            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:format24Hour="@string/abc_main_timer_time_24"
                android:format12Hour="@string/abc_main_timer_time_12"
                android:gravity="center"
                android:textSize="40sp"
                android:id="@+id/time"
                android:textColor="@color/black"/>
            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:gravity="center"
                android:format24Hour="@string/abc_main_timer_date_24"
                android:format12Hour="@string/abc_main_timer_date_12"
                android:id="@+id/date"
                android:textColor="@color/black"/>

        </LinearLayout >

    </androidx.cardview.widget.CardView >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        app:elevation="0dp"
        android:layout_margin="@dimen/dp_5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:selectableItemBackground"
            android:padding="@dimen/dp_5">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_status"
                android:layout_gravity="center"
                tools:ignore="ContentDescription" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/textView_status"
                android:textSize="15sp"
                android:layout_margin="@dimen/dp_5"
                android:textColor="@color/black"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout >