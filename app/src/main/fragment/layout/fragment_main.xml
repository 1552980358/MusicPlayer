<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipeRefreshLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Button -->
        <!-- 按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">
            
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/mainFragment_button_height"
                android:id="@+id/relativeLayoutAudio"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginBottom="@dimen/mainFragment_button_margin_bottom">
        
                <ImageView
                    android:layout_width="@dimen/mainFragment_button_imageView_size"
                    android:layout_height="@dimen/mainFragment_button_imageView_size"
                    android:id="@+id/imageViewAudio"
                    android:layout_margin="@dimen/mainFragment_button_imageView_margin"
                    android:src="@drawable/ic_action_left"
                    tools:ignore="ContentDescription"
                    android:layout_centerVertical="true"/>
        
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mainFragment_button_audio"
                    android:textColor="@color/black"
                    android:textSize="@dimen/mainFragment_button_textSize"
                    android:layout_toEndOf="@id/imageViewAudio"
                    android:layout_centerVertical="true" />
    
            </RelativeLayout>
    
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/mainFragment_button_height"
                android:id="@+id/relativeLayoutSettings"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginBottom="@dimen/mainFragment_button_margin_bottom">
        
                <ImageView
                    android:layout_width="@dimen/mainFragment_button_imageView_size"
                    android:layout_height="@dimen/mainFragment_button_imageView_size"
                    android:id="@+id/imageViewSettings"
                    android:layout_margin="@dimen/mainFragment_button_imageView_margin"
                    android:src="@drawable/ic_action_right"
                    tools:ignore="ContentDescription"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
        
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mainFragment_button_settings"
                    android:textColor="@color/black"
                    android:gravity="end"
                    android:textSize="@dimen/mainFragment_button_textSize"
                    android:layout_toStartOf="@id/imageViewSettings"
                    android:layout_centerVertical="true" />
    
            </RelativeLayout>
            
        </LinearLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="@dimen/mainFragment_title_paddings"
            android:paddingBottom="@dimen/mainFragment_title_paddings"
            android:paddingEnd="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mainFragment_textView_title"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewNewList"
                android:text="@string/mainFragment_textView_addNew"
                android:layout_alignParentEnd="true"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerView" />

    </LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>