<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipeRefreshLayout">
        
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerView" />
    
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    
    <app.github1552980358.android.musicplayer.view.SideCharView
        android:layout_width="@dimen/fragmentList_sideCharView_width"
        android:layout_height="match_parent"
        android:clickable="true"
        android:id="@+id/sideCharView"
        android:layout_marginBottom="@dimen/fragmentList_sideCharView_marginBottom"
        android:layout_alignParentEnd="true"
        android:focusable="true" />
    
    <TextView
        android:layout_width="@dimen/fragmentList_textView_size"
        android:layout_height="@dimen/fragmentList_textView_size"
        android:id="@+id/textViewChar"
        android:gravity="center"
        android:textSize="@dimen/fragmentList_textView_textSize"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:background="@color/black"
        android:visibility="gone" />

</RelativeLayout>