<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_play_history_height"
    android:minHeight="@dimen/view_play_history_height"
    android:maxHeight="@dimen/view_play_history_height"
    android:orientation="horizontal"
    android:id="@+id/relativeLayoutRoot"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:layout_width="@dimen/view_play_history_text_size"
        android:layout_height="@dimen/view_play_history_text_size"
        android:id="@+id/textViewNo"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTitle"
        android:textSize="@dimen/view_play_history_textSize"
        android:layout_toEndOf="@id/textViewNo"
        android:layout_centerVertical="true"
        android:textColor="@color/black"/>

</RelativeLayout>