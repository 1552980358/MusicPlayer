<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_song_list_dialog_content_height"
    android:maxHeight="@dimen/view_song_list_dialog_content_height"
    android:minHeight="@dimen/view_song_list_dialog_content_height"
    android:id="@+id/relativeLayoutRoot"
    android:padding="@dimen/view_song_list_dialog_content_padding"
    android:background="?android:attr/selectableItemBackground">
    
    <ImageView
        android:layout_width="@dimen/view_song_list_dialog_imageView_size"
        android:layout_height="@dimen/view_song_list_dialog_imageView_size"
        android:id="@+id/imageViewCover"
        tools:ignore="ContentDescription"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/view_song_list_dialog_imageView_marginEnd"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/imageViewCover">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTitle"
            android:textColor="@color/black"
            android:textSize="@dimen/view_song_list_dialog_textView_textSize"
            android:maxLines="1"
            android:ellipsize="end"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSubtitle"
            android:maxLines="1"
            android:ellipsize="end"/>
    
    </LinearLayout>

</RelativeLayout>