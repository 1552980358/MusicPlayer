<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/backgroundDrawerLayout" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/layout_filter"
        android:orientation="vertical"
        android:background="#80000000">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:elevation="@dimen/dp_0" >
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                app:navigationIcon="@drawable/ic_player_exit"
                android:id="@+id/toolbar" />
        </com.google.android.material.appbar.AppBarLayout >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="8"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/relativeLayout" >

            </RelativeLayout >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="2"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_timePass"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        android:gravity="end" />

                    <androidx.appcompat.widget.AppCompatSeekBar
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:id="@+id/seekBar"
                        android:layout_weight="8" />

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_timeTotal"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        android:gravity="start" />

                </LinearLayout >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center" >

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/imageButton_playForm"
                        android:layout_width="@dimen/playerActivity_subItem_size"
                        android:layout_height="@dimen/playerActivity_subItem_size"
                        android:layout_marginStart="@dimen/playerActivity_subItem_marginLeftRightWider"
                        android:layout_marginEnd="@dimen/playerActivity_subItem_marginLeftRightWider"
                        android:background="@drawable/ic_player_cycle"/>

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="@dimen/playerActivity_last_next_size"
                        android:layout_height="@dimen/playerActivity_last_next_size"
                        android:layout_marginStart="@dimen/playerActivity_subItem_marginLeftRightNarrower"
                        android:layout_marginEnd="@dimen/playerActivity_last_next_marginLeftRight"
                        android:background="@drawable/ic_player_last"
                        android:id="@+id/imageButton_last" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:layout_width="@dimen/playerActivity_controller_size"
                        android:layout_height="@dimen/playerActivity_controller_size"
                        android:layout_marginStart="@dimen/playerActivity_last_next_marginLeftRight"
                        android:background="@drawable/ic_player_control"
                        android:button="@null"
                        android:id="@+id/checkBox_playControl"
                        android:layout_marginEnd="@dimen/playerActivity_last_next_marginLeftRight" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="@dimen/playerActivity_last_next_size"
                        android:layout_height="@dimen/playerActivity_last_next_size"
                        android:layout_marginStart="@dimen/playerActivity_last_next_marginLeftRight"
                        android:layout_marginEnd="@dimen/playerActivity_subItem_marginLeftRightNarrower"
                        android:background="@drawable/ic_player_next"
                        android:id="@+id/imageButton_next" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="@dimen/playerActivity_subItem_size"
                        android:layout_height="@dimen/playerActivity_subItem_size"
                        android:id="@+id/imageButton_list"
                        android:background="@drawable/ic_list_info"
                        android:layout_marginStart="@dimen/playerActivity_subItem_marginLeftRightWider"
                        android:layout_marginEnd="@dimen/playerActivity_subItem_marginLeftRightWider" />

                </LinearLayout >

            </LinearLayout >

        </LinearLayout >

    </LinearLayout >

</androidx.drawerlayout.widget.DrawerLayout >