<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearLayout_container">
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_album"
        tools:ignore="ContentDescription" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="36sp"
            android:id="@+id/textView_title"
            android:layout_above="@id/textView_subTitle"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/textView_subTitle"
            android:textSize="24sp"
            android:layout_above="@id/seekBar"/>
        
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/seekBar"
            android:progressBackgroundTint="@color/black"
            android:thumbTint="@color/black"
            android:layout_centerVertical="true"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout_time"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_below="@id/seekBar">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_timePass"
                android:textColor="@color/black"
                android:text="00:00"
                tools:ignore="HardcodedText" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textColor="@color/black"
                tools:ignore="HardcodedText"
                android:id="@+id/textView_timeDiv" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_timeTotal"
                android:textColor="@color/black"
                android:text="00:00"
                tools:ignore="HardcodedText" />
        
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@id/linearLayout_time">
            
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/imageButton_playForm"
                android:layout_width="@dimen/playerActivity_subItem_size"
                android:layout_height="@dimen/playerActivity_subItem_size"
                android:layout_marginStart="@dimen/playerActivity_subItem_marginLeftRightWider"
                android:layout_marginEnd="@dimen/playerActivity_subItem_marginLeftRightWider" />
            
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="@dimen/playerActivity_last_next_size"
                android:layout_height="@dimen/playerActivity_last_next_size"
                android:layout_marginStart="@dimen/playerActivity_subItem_marginLeftRightNarrower"
                android:layout_marginEnd="@dimen/playerActivity_last_next_marginLeftRight"
                android:background="@drawable/ic_player_dyn_last"
                android:id="@+id/imageButton_last" />
            
            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="@dimen/playerActivity_controller_size"
                android:layout_height="@dimen/playerActivity_controller_size"
                android:layout_marginStart="@dimen/playerActivity_last_next_marginLeftRight"
                android:background="@drawable/ic_player_dyn_control"
                android:button="@null"
                android:id="@+id/checkBox_playControl"
                android:layout_marginEnd="@dimen/playerActivity_last_next_marginLeftRight" />
            
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="@dimen/playerActivity_last_next_size"
                android:layout_height="@dimen/playerActivity_last_next_size"
                android:layout_marginStart="@dimen/playerActivity_last_next_marginLeftRight"
                android:layout_marginEnd="@dimen/playerActivity_subItem_marginLeftRightNarrower"
                android:background="@drawable/ic_player_dyn_next"
                android:id="@+id/imageButton_next" />
            
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="@dimen/playerActivity_subItem_size"
                android:layout_height="@dimen/playerActivity_subItem_size"
                android:id="@+id/imageButton_list"
                android:background="@drawable/ic_player_dyn_list"
                android:layout_marginStart="@dimen/playerActivity_subItem_marginLeftRightWider"
                android:layout_marginEnd="@dimen/playerActivity_subItem_marginLeftRightWider" />
        
        </LinearLayout>
    
    </RelativeLayout>

</LinearLayout>
