<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/white</item>
        <!-- Extended Floating Action Bar -->
        <item name="shapeAppearanceSmallComponent">@style/AppearanceSmallComponent</item>
    </style>

    <style name="Theme.MusicPlayer.NoActionBar" parent="Theme.MusicPlayer">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MusicPlayer.NoActionBar.VariableNavigationBar" parent="Theme.MusicPlayer.NoActionBar"/>

    <style name="Theme.MusicPlayer.MainActivity" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/purple_500</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.MusicPlayer.NoActionBar.VariableNavigationBar</item>
    </style>

    <style name="Theme.MusicPlayer.NoActionBar.VariableNavigationBar.Transparent" parent="Theme.MusicPlayer.NoActionBar.VariableNavigationBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.MusicPlayer.ThemeTransitionActivity" parent="Theme.MusicPlayer.NoActionBar.VariableNavigationBar.Transparent">
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="Theme.MusicPlayer.NoActionBar.VariableNavigationBar.Transparent.DisableNavigationBarContrast"
        parent="Theme.MusicPlayer.NoActionBar.VariableNavigationBar.Transparent" />

    <style name="Theme.MusicPlayer.PlayActivity"
        parent="Theme.MusicPlayer.NoActionBar.VariableNavigationBar.Transparent.DisableNavigationBarContrast">
    </style>

    <style name="Theme.MusicPlayer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MusicPlayer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppearanceSmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/dp_4</item>
        <item name="cornerSizeTopRight">@dimen/dp_4</item>
        <item name="cornerSizeBottomLeft">@dimen/dp_4</item>
        <item name="cornerSizeBottomRight">@dimen/dp_4</item>
    </style>

</resources>