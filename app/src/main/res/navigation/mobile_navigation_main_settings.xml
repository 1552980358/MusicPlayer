<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation_main_settings"
    app:startDestination="@id/setting_fragment">
    
    <fragment
        android:id="@+id/setting_fragment"
        android:name="projekt.cloud.piece.music.player.ui.settings.SettingsFragment"
        tools:layout="@layout/fragment_base_preference">
        <action
            android:id="@+id/action_to_file_settings"
            app:destination="@id/file_settings_fragment" />
        <action
            android:id="@+id/action_to_play_settings"
            app:destination="@id/play_settings_fragment" />

    </fragment>
    
    <fragment
        android:id="@+id/file_settings_fragment"
        android:name="projekt.cloud.piece.music.player.ui.settings.fileSettings.FileSettingsFragment"
        tools:layout="@layout/fragment_base_preference" />
    
    <fragment
        android:id="@+id/play_settings_fragment"
        android:name="projekt.cloud.piece.music.player.ui.settings.playSettings.PlaySettingsFragment"
        tools:layout="@layout/fragment_base_preference" />

</navigation>