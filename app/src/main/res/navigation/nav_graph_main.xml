<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/main_host">

    <fragment
        android:id="@+id/main_host"
        android:name="projekt.cloud.piece.music.player.ui.fragment.mainHost.MainHostFragment"
        tools:layout="@layout/fragment_main_host" />

    <fragment
        android:id="@+id/player"
        android:name="projekt.cloud.piece.music.player.ui.fragment.player.PlayerFragment"
        tools:layout="@layout/fragment_player">
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="artist"
            app:argType="string" />
        <argument
            android:name="album"
            app:argType="string" />
        <argument
            android:name="duration"
            app:argType="long" />
        <argument
            android:name="cover_uri"
            app:argType="string" />
    </fragment>

</navigation>