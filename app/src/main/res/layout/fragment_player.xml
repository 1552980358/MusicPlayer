<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        
        <variable
            name="viewModel"
            type="projekt.cloud.piece.music.player.MainActivityViewModel" />
        
        <variable
            name="isTouched"
            type="Boolean" />
        
        <variable
            name="touchedPosition"
            type="Long" />
    
    </data>
    
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        
            <projekt.cloud.piece.music.player.widget.TransitionImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                bitmap="@{viewModel.artBitmap}" />
        
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="@dimen/md_spec_spacing_vertical_16"
                android:paddingHorizontal="@dimen/md_spec_spacing_horizontal_16"
                android:orientation="vertical">
            
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@{viewModel.title}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />
            
                <projekt.cloud.piece.music.player.widget.MetadataTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    artist="@{viewModel.artist}"
                    album="@{viewModel.album}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />
            
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:gravity="bottom">
                
                    <projekt.cloud.piece.music.player.widget.TimeView
                        android:id="@+id/time_view_touching"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:requireAnimation="false"
                        time="@{touchedPosition}"
                        animatedAlpha="@{isTouched ? 1F : 0F}" />
                
                    <projekt.cloud.piece.music.player.widget.ProgressSeekbar
                        android:id="@+id/progress_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/time_view_touching"
                        android:layout_marginVertical="@dimen/md_spec_spacing_vertical_8"
                        progress="@{viewModel.position}"
                        duration="@{viewModel.duration}" />
                
                    <projekt.cloud.piece.music.player.widget.TimeView
                        android:id="@+id/time_view_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/progress_seekbar"
                        time="@{viewModel.position}"
                        animatedAlpha="@{isTouched ? 0.5F : 1F}" />
                
                    <projekt.cloud.piece.music.player.widget.TimeView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/progress_seekbar"
                        time="@{viewModel.duration}" />
                
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/time_view_position"
                        android:orientation="horizontal">
                    
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                        
                            <projekt.cloud.piece.music.player.widget.RepeatButton
                                android:id="@+id/repeat_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                repeatMode="@{viewModel.repeatMode}" />
                    
                        </RelativeLayout>
                    
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5">
                        
                            <projekt.cloud.piece.music.player.widget.PlaybackStateButton
                                android:id="@+id/playback_state_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/md_spec_spacing_vertical_16"
                                android:layout_marginHorizontal="@dimen/md_spec_spacing_horizontal_16"
                                android:layout_centerInParent="true"
                                app:backgroundTint="@color/white"
                                app:tint="@color/black"
                                tools:ignore="ContentDescription"
                                playbackState="@{viewModel.playbackState}" />
                        
                            <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/app_compat_image_button_prev"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:layout_toStartOf="@id/playback_state_button"
                                android:layout_centerVertical="true"
                                app:srcCompat="@drawable/ic_baseline_skip_previous_24" />
                        
                            <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/app_compat_image_button_next"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:layout_toEndOf="@id/playback_state_button"
                                android:layout_centerVertical="true"
                                app:srcCompat="@drawable/ic_baseline_skip_next_24" />
                    
                        </RelativeLayout>
                    
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                        
                            <projekt.cloud.piece.music.player.widget.ShuffleButton
                                android:id="@+id/shuffle_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:layout_centerInParent="true"
                                shuffleMode="@{viewModel.shuffleMode}" />
                    
                        </RelativeLayout>
                
                    </androidx.appcompat.widget.LinearLayoutCompat>
            
                </RelativeLayout>
        
            </androidx.appcompat.widget.LinearLayoutCompat>
    
        </androidx.appcompat.widget.LinearLayoutCompat>
        
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="@dimen/fragment_player_drawer_width"
            android:layout_height="match_parent"
            android:background="?android:attr/colorBackground"
            android:fitsSystemWindows="true"
            android:layout_gravity="end"
            android:orientation="vertical">
            
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/md_spec_spacing_horizontal_16"
                android:layout_marginVertical="@dimen/md_spec_spacing_vertical_8"
                android:text="@string/fragment_player_drawer_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
            
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recycler_view"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            
        </androidx.appcompat.widget.LinearLayoutCompat>
        
    </androidx.drawerlayout.widget.DrawerLayout>

</layout>