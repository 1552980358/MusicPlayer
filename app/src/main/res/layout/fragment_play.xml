<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="coverImage"
            type="android.graphics.Bitmap" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/image_view"
                app:bitmapAnimated="@{coverImage}"/>

            <!-- Put it below AppCompatImageView, so that it can cover that -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/status_bar_height"
                    android:background="@color/shape_toolbar_filter_start" />
                <com.google.android.material.appbar.MaterialToolbar
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:id="@+id/toolbar"
                    app:popupTheme="@style/Theme.MusicPlayer.PopupOverlay" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- It manage the ripple effect of the whole bottom part -->
            <RelativeLayout
                android:id="@+id/relative_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/image_view"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <include
                    android:id="@+id/content_play_fragment_buttons"
                    layout="@layout/content_play_fragment_buttons" />

            </RelativeLayout>

        </RelativeLayout>

        <include
            android:id="@+id/content_play_fragment_bottom_sheet"
            layout="@layout/content_play_fragment_bottom_sheet" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>