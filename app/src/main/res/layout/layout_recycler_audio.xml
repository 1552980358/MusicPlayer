<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <data>
        
        <variable
            name="audio"
            type="projekt.cloud.piece.music.player.database.audio.item.AudioItem" />
        
    </data>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/md_spec_list_height_72"
        android:paddingHorizontal="@dimen/md_spec_list_spacing_horizontal_16"
        android:paddingVertical="@dimen/md_spec_list_spacing_vertical_16">
        
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/md_spec_list_avatar_40"
            android:layout_height="@dimen/md_spec_list_avatar_40"
            android:id="@+id/app_compat_image_view_avatar" />
    
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/material_text_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/app_compat_image_view_avatar"
            android:text="@{audio.title}"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
        
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/material_text_view_title"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/app_compat_image_view_avatar"
            android:text="@{audio.artistName + ` - ` + audio.albumTitle, default = ``}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />
    
    </RelativeLayout>
    
</layout>