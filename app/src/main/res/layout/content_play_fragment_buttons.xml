<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/fragment_play">

    <data>

        <import type="android.graphics.Color" />

        <variable
            name="iconTintColor"
            type="Integer" />

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/fragment_play_content_buttons_width"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_view_mode"
                android:layout_width="@dimen/fragment_play_content_buttons_icon_size"
                android:layout_height="@dimen/fragment_play_content_buttons_icon_size"
                android:layout_centerInParent="true"
                android:tint="@{iconTintColor == null ? Color.BLACK : iconTintColor}"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/fragment_play_content_buttons_width"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floating_action_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/fragment_play_content_buttons_button_margin"
                android:layout_marginEnd="@dimen/fragment_play_content_buttons_button_margin"
                android:backgroundTint="@color/white"
                app:borderWidth="@dimen/fragment_play_content_buttons_button_border"
                tools:ignore="ContentDescription" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_view_prev"
                android:layout_width="@dimen/fragment_play_content_buttons_icon_size"
                android:layout_height="@dimen/fragment_play_content_buttons_icon_size"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/floating_action_button"
                android:src="@drawable/ic_prev"
                android:tint="@{iconTintColor == null ? Color.BLACK : iconTintColor}"
                tools:ignore="ContentDescription" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_view_next"
                android:layout_width="@dimen/fragment_play_content_buttons_icon_size"
                android:layout_height="@dimen/fragment_play_content_buttons_icon_size"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/floating_action_button"
                android:src="@drawable/ic_next"
                android:tint="@{iconTintColor == null ? Color.BLACK : iconTintColor}"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/fragment_play_content_buttons_width"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_view_option"
                android:layout_width="@dimen/fragment_play_content_buttons_icon_size"
                android:layout_height="@dimen/fragment_play_content_buttons_icon_size"
                android:layout_centerInParent="true"
                android:tint="@{iconTintColor == null ? Color.BLACK : iconTintColor}"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>