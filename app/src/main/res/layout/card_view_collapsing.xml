<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <data>
        
        <variable
            name="title"
            type="String" />
        
        <variable
            name="content"
            type="String" />
        
    </data>
    
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/md_spec_card_48dp">
            
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/md_spec_card_button_size"
                android:layout_height="@dimen/md_spec_card_button_size"
                android:id="@+id/image_view_indicator"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ani_arrow_collapse"
                android:layout_marginHorizontal="@dimen/md_spec_card_button_margin_horizontal"
                android:layout_marginVertical="@dimen/md_spec_card_button_margin_vertical"/>
            
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/md_spec_card_margin"
                android:layout_toStartOf="@id/image_view_indicator"
                android:maxLines="1"
                android:text="@{title}"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />
        
        </RelativeLayout>
        
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_content"
            android:text="@{content}"
            android:layout_marginHorizontal="@dimen/md_spec_card_margin"
            android:paddingBottom="@dimen/md_spec_card_child_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:visibility="gone" />
    
    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>