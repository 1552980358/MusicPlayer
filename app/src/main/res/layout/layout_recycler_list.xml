<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <data>
        
        <variable
            name="audioMetadata"
            type="projekt.cloud.piece.music.player.item.AudioMetadata" />
        
        <variable
            name="number"
            type="String" />
        
    </data>
    
    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/md_spec_height_72"
        android:background="?attr/selectableItemBackground"
        android:paddingHorizontal="@dimen/md_spec_spacing_horizontal_16"
        android:paddingVertical="@dimen/md_spec_spacing_vertical_16"
        android:transitionName="@string/item_to_list_shared_container">
        
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/material_text_view_number"
            android:layout_width="@dimen/md_spec_size_40"
            android:layout_height="@dimen/md_spec_size_40"
            android:layout_marginEnd="@dimen/md_spec_spacing_horizontal_16"
            android:text="@{number}"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
    
        <com.google.android.material.textview.MaterialTextView
            android:id="@id/material_text_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/material_text_view_number"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{audioMetadata.title}"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>
    
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/material_text_view_title"
            android:layout_toEndOf="@id/material_text_view_number"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{audioMetadata.artistName + ` - ` + audioMetadata.albumTitle}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />
    
    </RelativeLayout>

</layout>