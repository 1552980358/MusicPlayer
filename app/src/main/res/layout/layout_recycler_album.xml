<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <data>
        
        <variable
            name="albumItem"
            type="projekt.cloud.piece.music.player.database.audio.item.AlbumItem" />
        
    </data>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/md_spec_list_height_56"
        android:id="@+id/root"
        android:background="?attr/selectableItemBackground"
        android:paddingHorizontal="@dimen/md_spec_list_spacing_horizontal_16"
        android:paddingVertical="@dimen/md_spec_list_spacing_vertical_8">
        
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/md_spec_list_avatar_40"
            android:layout_height="@dimen/md_spec_list_avatar_40"
            android:id="@+id/app_compat_image_view"
            android:layout_marginEnd="@dimen/md_spec_item_spacing_horizontal_16" />
        
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/app_compat_image_view"
            android:maxLines="1"
            android:text="@{albumItem.title}"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

</RelativeLayout>

</layout>