<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_nav_header_background"
    android:fitsSystemWindows="true"
    tools:showIn="@layout/fragment_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:id="@+id/relative_layout"
        android:layout_marginTop="@dimen/nav_header_margin_top"
        android:background="?android:attr/selectableItemBackground"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/nav_header_icon_size"
            android:layout_height="@dimen/nav_header_icon_size"
            android:src="@drawable/ic_nav_header"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>