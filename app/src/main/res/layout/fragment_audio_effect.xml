<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <sakuraba.saki.player.music.view.VisualizerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/audio_effect_visualizer_view_height"
        android:id="@+id/visualizer_View"/>

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch_compat"
        android:text="@string/loudness_enhancer_title"
        android:paddingStart="10dp"
        android:paddingEnd="10dp" />

    <sakuraba.saki.player.music.widget.ValuedSeekbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/value_seekbar_loudness_enhancer" />

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch_compat_equalizer"
        android:text="@string/equalizer_title"
        android:paddingStart="10dp"
        android:paddingEnd="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_view"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</androidx.appcompat.widget.LinearLayoutCompat>