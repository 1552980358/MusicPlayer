<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="@dimen/constraint_fill"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/material_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/query_media_title" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/constraint_fill"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/md_spec_spacing_ver_8"
        android:layout_marginHorizontal="@dimen/md_spec_spacing_hor_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/query_media_image_container_height"
                android:background="?attr/colorSecondaryVariant">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/app_compat_image_view_android"
                    android:layout_width="@dimen/query_media_image_size"
                    android:layout_height="@dimen/query_media_image_size"
                    android:layout_marginEnd="@dimen/md_spec_spacing_hor_16"
                    app:layout_constraintEnd_toStartOf="@id/app_compat_image_view_arrow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/ic_round_android_24"
                    app:tint="?attr/colorOnSecondary" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/app_compat_image_view_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_round_arrow_forward_24"
                    app:tint="?attr/colorOnSecondary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/app_compat_image_view_library"
                    android:layout_width="@dimen/query_media_image_size"
                    android:layout_height="@dimen/query_media_image_size"
                    android:layout_marginStart="@dimen/md_spec_spacing_hor_16"
                    app:layout_constraintStart_toEndOf="@id/app_compat_image_view_arrow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/ic_round_library_music_24"
                    app:tint="?attr/colorOnSecondary" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/md_spec_spacing_hor_16"
                android:layout_marginTop="@dimen/md_spec_spacing_ver_8"
                android:text="@string/query_media_query_title"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/material_text_view_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/md_spec_spacing_hor_16"
                android:text="@string/query_media_query_body_wait"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/material_button_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/md_spec_spacing_hor_16"
                android:layout_marginVertical="@dimen/md_spec_spacing_ver_8"
                android:text="@string/query_media_button_finish"
                android:layout_marginTop="@dimen/md_spec_spacing_ver_8"
                android:layout_gravity="end"
                app:iconPadding="0dp"
                app:iconGravity="textStart" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>