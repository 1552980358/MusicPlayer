<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/md_spec_spacing_hor_4">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeable_image_view_image"
        android:layout_width="@dimen/md_spec_size_image_40"
        android:layout_height="@dimen/md_spec_size_image_40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shapeAppearance="?attr/roundShapeableImageAppearance" />

</androidx.constraintlayout.widget.ConstraintLayout>