<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>

        <import type="android.graphics.Color" />
        
        <variable
            name="imageBitmap"
            type="android.graphics.Bitmap" />

        <variable
            name="buttonColor"
            type="Integer" />
    
        <variable
            name="audioItem"
            type="projekt.cloud.piece.music.player.database.audio.item.AudioItem" />

        <variable
            name="backgroundColor"
            type="Integer" />

        <variable
            name="primaryColor"
            type="Integer" />

        <variable
            name="secondaryColor"
            type="Integer" />

        <variable
            name="position"
            type="Long" />
        
        <variable
            name="repeatMode"
            type="Integer" />
        
        <variable
            name="shuffleMode"
            type="Integer" />
        
        <variable
            name="controlDuration"
            type="Long" />
        
        <variable
            name="isControlling"
            type="Boolean" />
        
        <variable
            name="rippleColorStateList"
            type="android.content.res.ColorStateList" />
        
        <variable
            name="isSleepTimerEnabled"
            type="Boolean" />
        
    </data>
    
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">
        
        <projekt.cloud.piece.music.player.widget.TransitionImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/transition_image_view"
            default_image="@{@drawable/ic_round_audiotrack_24}"
            bitmap="@{imageBitmap}" />
        
        <include
            android:id="@+id/detail_play_control"
            layout="@layout/detail_play_control"
            app:primaryColor="@{primaryColor}"
            app:secondaryColor="@{secondaryColor}"
            app:audioItem="@{audioItem}" />
        
        <include
            android:id="@+id/position_play_control"
            layout="@layout/position_play_control"
            app:isControlling="@{isControlling}"
            app:controlDuration="@{controlDuration}"
            app:position="@{position}"
            app:durationLong="@{audioItem.duration}"
            app:primaryColor="@{primaryColor}"
            app:secondaryColor="@{secondaryColor}"
            app:backgroundColor="@{backgroundColor}"/>
        
        <include
            android:id="@+id/buttons_play_control"
            layout="@layout/buttons_play_control"
            app:repeatMode="@{repeatMode}"
            app:shuffleMode="@{shuffleMode}"
            app:buttonColor="@{buttonColor}"
            app:rippleColorStateList="@{rippleColorStateList}"
            app:isSleepTimerEnabled="@{isSleepTimerEnabled}" />
        
    </androidx.appcompat.widget.LinearLayoutCompat>
    
</layout>