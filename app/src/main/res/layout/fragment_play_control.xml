<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    
    <data>
        
        <variable
            name="imageBitmap"
            type="android.graphics.Bitmap" />
    
        <variable
            name="primaryColor"
            type="Integer" />
    
        <variable
            name="secondaryColor"
            type="Integer" />
        
        <variable
            name="buttonColor"
            type="Integer" />
    
        <variable
            name="audioItem"
            type="projekt.cloud.piece.music.player.database.audio.item.AudioItem" />
        
        <variable
            name="position"
            type="Long" />
        
    </data>
    
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root">
        
        <projekt.cloud.piece.music.player.widget.TransitionImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/transition_image_view"
            default_image="@{@drawable/ic_round_audiotrack_200}"
            bitmap="@{imageBitmap}" />
        
        <include
            android:id="@+id/detail_play_control"
            layout="@layout/detail_play_control"
            bind:primaryColor="@{primaryColor}"
            bind:secondaryColor="@{secondaryColor}"
            bind:audioItem="@{audioItem}" />
        
        <include
            android:id="@+id/position_play_control"
            layout="@layout/position_play_control"
            bind:position="@{position}"
            bind:duration="@{audioItem.duration}"
            bind:primaryColor="@{primaryColor}"
            bind:secondaryColor="@{secondaryColor}" />
        
        <include
            android:id="@+id/buttons_play_control"
            layout="@layout/buttons_play_control"
            bind:buttonColor="@{buttonColor}" />
        
    </androidx.appcompat.widget.LinearLayoutCompat>
    
</layout>